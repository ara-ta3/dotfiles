function avim () {
    vim $(ag $@ | peco --query "$LBUFFER" | awk -F : '{print "-c " $2 " " $1}')
}

function g-checkout-peco () {
    git checkout $(git branch -a|grep -v "*"|grep -v "origin/master"|sed -e 's/remotes\///g'|peco|sed -e 's/origin\///g')
}

function p-docker () {
    docker run -i -t `docker images |grep -v REPOSITORY|peco |awk '{print $1 ":" $2}'` /bin/bash
}

